# esac

id=$(echo $url | cut -d/ -f5)

aria2c -d ~/pix/wallp https://w.wallhaven.cc/$(curl -s $url | grep -Eo ".{8}wallhaven-$id.{4}") && dunstify 'ðŸ–¼ Wallpaper Downloaded!' "Saved as: wallhaven-$id.jpg"
